{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "ansible-lint-current-file",
        "type": "shell",
        "command": "uv",
        "args": [
          "run",
          "ansible-lint",
          "--format=pep8",
          "${file}"
        ],
        "problemMatcher": {
          "owner": "ansible-lint",
          "source": "ansible-lint",
          "fileLocation": "absolute",
          "severity": "warning",
          "pattern": {
            "regexp": "^(.+):(\\d+):\\s*(.+):\\s*(.+)$",
            "file": 1,
            "line": 2,
            "code": 3,
            "message": 4
          }
        },
        "presentation": {
          "echo": true,
          "reveal": "silent",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "isBackground": false
      },
      {
        "label": "ansible-lint-all",
        "type": "shell",
        "command": "uv",
        "args": [
          "run",
          "ansible-lint",
          "--format=pep8"
        ],
        "problemMatcher": {
          "owner": "ansible-lint",
          "source": "ansible-lint",
          "fileLocation": "absolute",
          "severity": "warning",
          "pattern": {
            "regexp": "^(.+):(\\d+):\\s*(.+):\\s*(.+)$",
            "file": 1,
            "line": 2,
            "code": 3,
            "message": 4
          }
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        }
      }
    ]
  }
  